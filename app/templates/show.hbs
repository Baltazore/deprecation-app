<div class="layout-grid">
  <div class="mobile-sidebar {{if this.isToc "desktop" "mobile"}}" role="complementary">
    <TableOfContents
      @sortedGroupedResults={{this.sortedGroupedResults}}
      @isToc={{this.isToc}}
    />
  </div>

  {{log this.isToc}}

  <div class="sidebar" role="complementary">
    {{table-of-contents sortedGroupedResults=sortedGroupedResults}}
    <div id="back-to-top"><a id="back-top-top" href="#">&#11014; Back to Top</a></div>
  </div>

  <div class="main ml-5 {{if this.isToc "desktop" "mobile"}}">
    <h1>Deprecations Added in {{project}} {{version}}</h1>
    <p>What follows is a list of deprecations introduced to {{project}} during the {{version}}
    cycle.</p>
    <p>For more information on deprecations in {{project}}, see the {{#link-to 'index'}}main deprecations page{{/link-to}}.</p>

    {{#each sortedGroupedResults as |result|}}
      <h2 class="anchorable-toc rounded-lg padding-small">Deprecations Added in {{result.since}} </h2>
      {{renderId}}
      {{#each result.contents as |content|}}
        {{deprecation-article model=content renderIdOrUntil=renderIdOrUntil}}
      {{/each}}
    {{/each}}
  </div>

  <EsButton
    class="toc-toggle"
    aria-label="expand table of contents"
    title="expand table of contents"
    @onClicked={{action "toggleToc"}}
  >
    <img src="/images/expand.svg" alt="expand table of contents">
  </EsButton>
</div>